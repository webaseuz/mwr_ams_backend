{
  "KestrelCustom": {
    "Endpoints": {
      "Http1": {
        "Port": 5000
      }
    }
  },
  "Authentication": {
    "DefaultProvider": "BMS-JWT",
    "Providers": [
      {
        "Name": "BMS-JWT",
        "Type": "BmsJwtProvider",
        "Enabled": true,
        "Settings": {
          "Issuer": "BMS-Banking-System",
          "Audience": "bms-services",
          "SecretKey": "your-256-bit-secret-key-for-jwt-signing-keep-it-secure",
          "TokenExpiration": 120,
          "RefreshTokenExpiration": 43200,
          "RequireHttps": true,
          "ValidateLifetime": true,
          "ClockSkew": 300
        }
      },
      {
        "Name": "BMS-REFERENCE",
        "Type": "BmsReferenceProvider",
        "Enabled": true,
        "Settings": {
          "DatabaseConnection": "Host=127.0.0.1;Port=6529;Username=postgres;Password=WEB@$Ef0rever;Database=bms_auth_db;",
          "TokenTableName": "ReferenceTokens",
          "CleanupInterval": 3600,
          "MaxTokenAge": 86400
        }
      }
    ]
  },
  "Services": {
    "AutoParkService": {
      "BaseUrl": "http://localhost:5006",
      "HealthEndpoint": "/health",
      "Timeout": 30,
      "RetryPolicy": {
        "RetryCount": 3,
        "BackoffMultiplier": 2
      }
    },
    "ServiceDeskService": {
      "BaseUrl": "http://localhost:5008",
      "HealthEndpoint": "/health",
      "Timeout": 30,
      "RetryPolicy": {
        "RetryCount": 3,
        "BackoffMultiplier": 2
      }
    },
    "AdditionalServices": {}
  },
  "Localization": {
    "DefaultLanguage": "uz-latn",
    "SupportedLanguages": ["uz-latn", "uz-cyrl", "ru", "en"],
    "ResourcePath": "Resources"
  },
  "HealthChecks": {
    "UIPath": "/health-ui",
    "CheckInterval": 30,
    "HealthCheckTimeout": 10,
    "Services": [
      {
        "Name": "autopark-service",
        "Url": "http://localhost:5006/health",
        "Critical": true
      },
      {
        "Name": "servicedesk-service",
        "Url": "http://localhost:5008/health",
        "Critical": true
      }
    ]
  },
  "Encryption": {
    "Key": "N0V1q0O7A9vkw8XgJhYP8bUktD4wH5TG"
  },
  "Swagger": {
    "Enabled": true,
    "Title": "BMS BFF API",
    "Version": "1.0.0",
    "Description": "Backend for Frontend API for BMS Banking System"
  },
  "Cors": {
    "UseCors": true,
    "AllowedOrigins": "http://localhost:3000;http://localhost:4200"
  },
  "LogSdk": {
    "ApplicationName": "bms_bff",
    "DatabaseType": "POSTGRES",
    "ConnectionString": "Host=127.0.0.1;Port=6529;Username=postgres;Password=WEB@$Ef0rever;Database=bms_log_db;",
    "AppError": {
      "Enabled": true,
      "IncludeBody": true,
      "DetailMaxLength": 5000,
      "IncludeDetailInResponse": true
    },
    "ShowControllers": true
  },
  "Jaeger": {
    "AppName": "bms-bff",
    "Host": "localhost",
    "Port": 5775
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Bms": "Debug"
    }
  },
  "AllowedHosts": "*"
}