<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Microsoft oficial source -->

    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    
    <!-- Company private source -->
    <add key="Webase" value="https://package.webase.uz/v3/index.json" />
    
    <!-- Local development packages -->
    <add key="local" value="packages/build" />
  </packageSources>
  
  <!-- PACKAGE SOURCE MAPPING -->
  <packageSourceMapping>
    <!-- Microsoft va barcha public packages -->
    <packageSource key="nuget.org">
      <package pattern="Microsoft.*" />
      <package pattern="System.*" />
      <package pattern="Azure.*" />
      <package pattern="EntityFramework*" />
      <package pattern="Newtonsoft.*" />
      <package pattern="Serilog*" />
      <package pattern="AutoMapper*" />
      <package pattern="FluentValidation*" />
      <package pattern="MediatR*" />
      <package pattern="Polly*" />
      <package pattern="Swashbuckle.*" />
      <package pattern="*" />  <!-- Default: boshqa barcha packages -->
    </packageSource>
    
    <!-- Company internal packages -->
    <packageSource key="Webase">
      <package pattern="Webase.*" />
      <package pattern="WEBASE.*" />
      <package pattern="Bms.*" />
      <package pattern="BMS.*" />
    </packageSource>
    
    <!-- Local development packages -->
    <packageSource key="local">
      <package pattern="AutoPark.*" />
      <package pattern="Local.*" />
    </packageSource>
  </packageSourceMapping>
</configuration>